{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": [
    "controllers",
    "db",
    "middleware",
    "models",
    "routes",
    "types",
    "utils",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
